<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slide_layout_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/slide_imageView"
        android:layout_centerVertical="true"
        android:tint="@color/colorWhite"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_imageView"
        android:id="@+id/slide_textView_tittle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/textColorLight"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_textView_tittle"
        android:id="@+id/slide_textView_description"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/textColorLight"/>

    <TextView
        android:id="@+id/slide_textView_point1"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/slide_textView_point2"
        android:text="."
        android:textColor="@color/colorTransparentWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80dp"/>

    <TextView
        android:id="@+id/slide_textView_point2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="."
        android:textColor="@color/colorTransparentWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80dp"/>

    <TextView
        android:id="@+id/slide_textView_point3"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/slide_textView_point2"
        android:text="."
        android:textColor="@color/colorTransparentWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80dp"/>


</RelativeLayout>