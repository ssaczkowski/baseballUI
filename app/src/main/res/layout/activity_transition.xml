<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransitionActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:paddingTop="16dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_baseball"
        android:id="@+id/transition_activity_image_view"
        android:transitionName="image_view_transition"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Transition"
        android:layout_gravity="center_horizontal"
        android:id="@+id/transition_activity_text_view"
        android:transitionName="text_view_transition"/>

</LinearLayout>